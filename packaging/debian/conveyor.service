[Unit]
Description=Conveyor CI API Server
After=network.target

[Service]
Type=simple
User=conveyor
Group=conveyor
ExecStart=/usr/local/bin/conveyor up
WorkingDirectory=/var/lib/conveyor
Restart=on-failure
RestartSec=5s
LimitNOFILE=65535

# Security hardening
PrivateTmp=true
ProtectSystem=full
ProtectHome=true
NoNewPrivileges=true
CapabilityBoundingSet=CAP_NET_BIND_SERVICE

[Install]
WantedBy=multi-user.target
